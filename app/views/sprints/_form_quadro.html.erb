<div style="width: 35%; height: 80px"></div>
<%= form_for @quadro, remote: true, class: 'form-quadro' do |u| %>
    <div class="erros_quadro">
        <%= render('erro') %>
    </div>
    <div class="form-group label-valor">
        <%= u.label "Nome", class: 'label-form' %>
        <%= u.text_field :nome, class: 'form-control valor-form' %>
    </div>
    <div class="form-group label-valor">
        <%= u.label "Descrição", class: 'label-form' %>
        <%= u.text_area :descricao, class: 'form-control valor-form', rows: 5 %>
    </div>
    <table style="width: 100%; height: auto">
        <tr>
            <td style="width: 50%; text-align: right">
                <%= u.label "Pontuação", style: 'vertical-align: sub' %>
            </td>
            <td>
                <%= u.number_field :pontuacao, style: 'height: 25px; width: 60px' %>
            </td>
        </tr>
        <tr>
            <td style="width: 50%; text-align: right">
                <%= u.label "Burndown" %>
            </td>
            <td>
                <%= u.check_box :burndown, style: 'width: 20px; height: 20px' %>
            </td>
        </tr>
    </table>
    <%= u.hidden_field :usuario_id, value: @usuario_logado.id %>
    <%= u.hidden_field :status_id, value: Status.first.id %>
    <%= u.hidden_field :coluna_id, value: @coluna.id %>
    <%= u.hidden_field :sprint_id, value: @sprint.id %>
    <%= hidden_field_tag :projeto_id, @coluna.projeto.id %>
    <%= hidden_field_tag :sprint_id, @sprint.id %>
    <div style="width: 100%; text-align: center">
        <%= button_tag 'Cancelar', type: 'button', class: 'btn btn-danger', onclick: "$('.div_lateral').hide()" %>
        <%= u.submit 'Confirmar', class: 'btn btn-success', style: 'margin: 0 auto' %>
    </div>

<% end %>