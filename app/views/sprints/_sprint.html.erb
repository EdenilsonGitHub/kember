<div class="sprint" style="width: 100%; height: 470px; text-align: left; display: inline-block">
    <% @left = 15 %>
    <% @colunas.each do |col| %>
        <div style="height: 470px; width: 200px; display: inline-block; margin-left: 15px; position: absolute; left: <%= @left %>px">
            <% begin %>
                <%= link_to('Selecione', atualiza_quadro_path(quadro: @quadro.id, coluna_selecionada: col.id, colunas: @colunas.pluck(:id), projeto: @projeto.id, sprint: @sprint.id), class: "att_quadro", remote: true) %>
            <% rescue %>
            <% end %>
            <div style="height: 470px; width: 200px; background-color: #EEEDF0; border-radius: 5px; border: 1px solid #EEEDF0; margin-top: 5px">
                <div style="height: auto; width: 95%; margin: 0 auto; margin-top: 5px; border-radius: 5px; padding-left: 5px; text-align: center; font-weight: bold; min-height: 40px;">
                    <%= col.nome %>
                </div>
                <% col.quadros.each do |quad| %>
                    <div style="width: 95%; margin: 0 auto; min-height: 100px; height: auto; background-color: white; border-radius: 10px; padding: 5px; margin-bottom: 5px" >
                        <div class="grid-container">
                            <div class="item1"><%= quad.nome %></div>
                            <div class="item2">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: white; color: black; border: none;"></button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <%= link_to("Mover", mover_tarefa_path(quadro: quad.id, coluna_atual:col.id, projeto: @projeto.id, sprint: @sprint.id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'dropdown-item'}) %>
                                    </div>
                                </div>
                            </div>
                            <div class="item3" style="background-color: black; color: white; border-radius: 25px; text-align: center; max-width: 30px; height: 30px; padding-top: 4px; margin-top: 2px"><%= quad.pontuacao %></div>
                            <div class="item4" style="background-color: <%= quad.status.cor_fundo %>; color: <%= quad.status.cor_fonte %>; border: 1px solid <%= quad.status.cor_fonte %>; border-radius: 15px; text-align: center; font-size: 15px"><%= @projeto.sigla %>-<%= quad.id %></div>
                            <div class="item5" style="width: 30px; height: 30px; background-color: lightgray; border-radius: 25px; margin-top:2px"></div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <% @left += 210 %>
    <% end %>
</div>