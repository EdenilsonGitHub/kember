<%= form_for @status, class: 'form-quadro' do |u| %>
    <div class="erros_projeto">
        <%= render('erro') %>
    </div>
    <div class="form-group label-valor">
        <%= u.label "Nome", class: 'label-form' %>
        <%= u.text_field :nome, class: 'form-control valor-form' %>
    </div>
    <div class="form-group label-valor">
        <%= u.label "Cor de fundo", class: 'label-form' %>
        <%= u.text_field :cor_fundo, type: "color", class: 'form-control valor-form input-sm' %>
    </div>
    <div class="form-group label-valor">
        <%= u.label "Cor de fonte", class: 'label-form' %>
        <%= u.text_field :cor_fonte, type: "color", class: 'form-control valor-form input-sm' %>
    </div>
    <div class="form-group label-valor">
        <%= u.label "Prioridade", class: 'label-form' %>
        <%= u.text_field :rank, class: 'form-control valor-form' %>
    </div>
    <div class="form-group" style="margin: 0 auto; text-align: left; margin-bottom: 20px">
        <%= u.label "Projeto", class: 'label-form', style: 'width: 100%' %>
        <%= u.select :projeto_id, options_from_collection_for_select(@projetos, "id", "nome"), prompt: "Selecione", class: 'form-control input-lg', style: 'width: 100%' %>
    </div>
    <table style="width: 100%; height: auto">
        <tr>
            <td style="width: 50%; text-align: right">
                <%= u.label "Finaliza o fluxo" %>
            </td>
            <td>
                <%= u.check_box :finalizador, style: 'width: 20px; height: 20px' %>
            </td>
        </tr>
        <tr>
            <td style="width: 50%; text-align: right">
                <%= u.label "Lista de prioridades" %>
            </td>
            <td>
                <%= u.check_box :lista, style: 'width: 20px; height: 20px' %>
            </td>
        </tr>
    </table>
    <%= u.hidden_field :empresa_id, value: Empresa.first.try(:id) %>
    <div style="width: 100%; text-align: center">
        <%= link_to "Cancelar", statuses_path(projeto_id: params[:projeto_id]), class: 'btn btn-danger' %>
        <%= u.submit 'Confirmar', class: 'btn btn-success', style: 'margin: 0 auto' %>
    </div>
<% end %>