<div style="margin-top: 20px; text-align: center; margin-bottom: 150px">
    <div style="width: 100%; height: 300px; display: inline-block; margin: 0 auto">
        <div style="display: inline-block; width: 25vw; height: 45px; padding-top: 5px; border-radius: 20px; float: left; margin-left: 20px; font-size: 25px; background-color: #9525E3; color: white; font-weight: bold;">
            <%= @perfil.nome %>
        </div>
    <div>
    <div style="margin-top: 30px; text-align: center; margin-bottom: 150px; height: 500px">
        <div style="width: 100%; height: 40px"></div>
        <div style="width: 100%; display: inline-block; margin-bottom: 10px">
            <div style="width: 49%; display: inline-block; text-align: right; vertical-align: text-top">
                <h3>Funcionalidades</h3>
            </div>
            <div style="width: 30%; display: inline-block; text-align: right; vertical-align: unset">
                <%= link_to 'Adicionar funcionalidade', adicionar_funcionalidade_path(perfil_id: @perfil.id, empresa_id: Empresa.first.id), class: 'btn btn-outline-success', style: 'border-radius: 15px' %>
            </div>
        </div>
        <div class="funcionalidades_perfil">
            <%= render('funcionalidades_perfil') %>
        </div>
    </div>
    <div style="margin-top: <%= @perfil.perfil_funcionalidades.count > 20 ? '860px' : '30px' %>; text-align: center; margin-bottom: 150px; height: 500px">
        <div style="width: 100%; height: 40px"></div>
        <div style="width: 100%; display: inline-block; margin-bottom: 10px">
            <div style="width: 39%; display: inline-block; text-align: right; vertical-align: text-top">
                <h3>Usuários</h3>
            </div>
            <div style="width: 30%; display: inline-block; text-align: right; vertical-align: unset">
                <%= link_to 'Adicionar usuário', adicionar_usuario_p_path(perfil_id: @perfil.id, empresa_id: Empresa.first.id), class: 'btn btn-outline-success', style: 'border-radius: 15px' %>
            </div>
        </div>
        <div class="usuarios_perfil">
            <%= render('usuarios_perfil') %>
        </div>
    </div>
</div>