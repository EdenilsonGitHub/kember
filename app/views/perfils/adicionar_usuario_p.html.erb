<div style="margin-top: 20px; text-align: center; margin-bottom: 150px">
    <div style="width: 100%; height: 300px; display: inline-block; margin: 0 auto">
        <div style="display: inline-block; width: 25vw; height: 45px; padding-top: 5px; border-radius: 20px; float: left; margin-left: 20px; font-size: 25px; background-color: #9525E3; color: white; font-weight: bold;">
            <%= @perfil.nome %>
        </div>
    <div>
    <div style="margin-top: 100px; text-align: center; margin-bottom: 150px; text-align: center">
        <div style="width: 80%; margin: 0 auto; margin-top: 40px">
            <div style="width: 100%; text-align: center; margin-top: 25px; font-size: 25px">
                <span style="margin: 0 auto; width: 100%">Adicionar usuário ao perfil</span>
            </div>
            <%= form_tag(adicionar_usuario_perfil_path, style: 'margin-top: 20px') do %>
                <div class="form-group" style="width: 80%; margin: 0 auto; text-align: left">
                    <%= label_tag "Usuário", nil, style: 'margin-left: 5px; margin-bottom: 0px' %>
                    <%= select_tag :usuario, options_from_collection_for_select(@usuarios, "id", "nome"), prompt: "Selecione", class:'form-control input-lg' %>
                </div>
                <%= hidden_field_tag :perfil_id, @perfil.id  %>
                <div style="width: 100%; text-align: center; margin-top: 30px">
                    <%= link_to 'Cancelar', perfils_path(empresa_id: Empresa.first.id), class: 'btn btn-danger' %>
                    <%= submit_tag 'Confirmar', class: 'btn btn-success', style: 'margin: 0 auto' %>
                </div>
            <% end %>
            <div style="height: 40px; width: 100%"></div>
        </div>
    </div>
</div>