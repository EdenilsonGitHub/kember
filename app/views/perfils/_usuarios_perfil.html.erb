<table style="background-color: white; width: 80%; margin: 0 auto; margin-top: 30" class="<%= @usuarios.any? ? 'table-bordered' : '' %>">
    <% if @usuarios.any? %>
        <thead>
            <tr>
                <th style="padding: 5px; padding-left: 15px">
                    Nome
                </th>
                <th style="padding: 5px; text-align: center">
                </th>
            </tr>
        </thead>
        <tbody>
            <% @usuarios.each do |usr| %>
                <tr>
                    <td scope="row" style="min-width: 20px; padding: 15px; height: 20px; text-align: center">
                        <%= usr.nome %>
                    </td>
                    <td class="text-center" style="width: 35px">
                        <%= link_to(fa_icon('trash'), excluir_usuario_path(usuario_id: usr.id, perfil_id: @perfil, empresa_id: Empresa.first.id), data: { confirm: 'Deseja remover o usuÃ¡rio do perfil?' }, remote: true, class: 'trash' ) %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    <% else %>
        <tbody>
            <tr>
                <td colspan="2" scope="row" style="text-align: left; color: red; padding: 15px">
                    Sem registros
                </td>
            </tr>
        </tbody>
    <% end %>
</table>