<div class="container" style="width: 700px; text-align: center; height: 500px; border: 1px solid #bc77ed64; margin-top:20px; border-radius: 20px;">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3;" style="margin: 0 auto">
            <%= form_tag(logar_path, style: 'margin-top: 70px') do %>
                <fieldset>
                    <h2>Login</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        <%= text_field_tag :login, nil, class:'form-control input-lg', placeholder: "Email" %>
                    </div>
                    <div class="form-group">
                        <%= password_field_tag :senha, nil, class:'form-control input-lg', placeholder: "Senha"  %>
                    </div>
                    <span class="button-checkbox">
					<label style="padding-right: 0px; vertical-align: bottom;">Lembrar-me</button>
                    <span style="vertical-align: middle"><%= check_box_tag :conectado %></span>
					<a href="" class="btn btn-link pull-right">Esqueceu sua senha?</a>
				</span>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <%= submit_tag 'Entrar', class:'btn btn-lg btn-success btn-block' %>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <%= link_to 'Cadastre-se', new_usuario_path(), class: 'btn btn-lg btn-primary btn-block' %>
                        </div>
                    </div>
                </fieldset>
            <% end %>
        </div>
    </div>
</div>